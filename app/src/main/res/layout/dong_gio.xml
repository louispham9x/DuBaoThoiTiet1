<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"

    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textGio"
        android:text="Giờ"
        android:layout_margin="10dp"
        android:textSize="22sp"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageIcon"
       android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textGio"
        android:layout_width="75dp"
        android:layout_height="45dp" />
    <TextView
        android:id="@+id/textNhietDo"
        android:text="26C"
        android:textColor="#03A9F4"
        android:textSize="16sp"

        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textTocdoGio"
        android:text="16km/h"
        android:textColor="#03A9F4"
        android:layout_toRightOf="@id/textNhietDo"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/textTocdoGio"
        android:id="@+id/textLuongMua"
        android:textColor="#03A9F4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="50mm"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</android.support.v7.widget.CardView>